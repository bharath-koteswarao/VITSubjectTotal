<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.bharath.vitsubjecttotal.MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/primary"
        android:onClick="theory"
        android:id="@+id/btn1"
        android:text="ONLY THEORY"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:padding="15dp"
        android:onClick="theoryAndLab"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@color/primary"
        android:textStyle="bold"
        android:text="THEORY AND LAB"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:onClick="theoryAndProject"
        android:textColor="@android:color/white"
        android:background="@color/primary"
        android:id="@+id/btn3"
        android:text="THEORY AND PROJECT"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:onClick="theoryAndLabAndProject"
        android:textColor="@android:color/white"
        android:background="@color/primary"
        android:id="@+id/btn4"
        android:text="THEORY AND LAB AND PROJECT"/>
</LinearLayout>
